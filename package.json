{
  "name": "summarizer",
  "description": "A plugin which displays all hidden Channels and allows users to view information about them, this won't allow you to read them (impossible)",
  "main": "Summarizer.plugin.js",
  "scripts": {
    "build": "webpack --progress --color",
    "dev": "webpack --watch --progress --color"
  },
  "author": "JanitorialMess",
  "license": "GPL-3.0-only",
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-react": "^7.23.3",
    "babel-loader": "^9.1.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.1",
    "prettier": "^3.2.5",
    "raw-loader": "^4.0.2",
    "terser-webpack-plugin": "^5.3.10",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  },
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "targets": {
